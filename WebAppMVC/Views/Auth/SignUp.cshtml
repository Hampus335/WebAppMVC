@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="card bg-white">
    <div class="card-body">

        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="FormData.FirstName" class="form-label"></label>
                <input asp-for="FormData.FirstName" class="form-control">
                <span asp-validation-for="FormData.FirstName"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FormData.LastName" class="form-label"></label>
                <input asp-for="FormData.LastName" class="form-control">
                <span asp-validation-for="FormData.LastName"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FormData.Email" class="form-label"></label>
                <input asp-for="FormData.Email" class="form-control">
                <span asp-validation-for="FormData.Email"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FormData.Password" class="form-label"></label>
                <input asp-for="FormData.Password" class="form-control" value="@Model?.FormData.Password">
                <span asp-validation-for="FormData.Password"></span>
            </div>
            <div class="mb-5">
                <label asp-for="FormData.ConfirmPassword" class="form-label"></label>
                <input asp-for="FormData.ConfirmPassword" class="form-control" value="@Model?.FormData.ConfirmPassword">
                <span asp-validation-for="FormData.ConfirmPassword"></span>
            </div>

            <div class="mb-3">
                <select asp-for="FormData.ClientId" class="form-control">
                    <option value="0" disabled sele>-- Select Client --</option>
                </select>
                <span asp-validation-for="FormData.ClientId"></span>
            </div>

            <button type="submit" class="btn btn-blue">Submit</button>
        </form>

    </div>
</div>